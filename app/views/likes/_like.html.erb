<div class="like-count">
  <%= article.likes.count %>
</div>
<div>
  <% if user_signed_in? && current_user.like_judge(article) %>
    <%= button_to "いいねを取り消す", article_like_path(article.id, article.likes.ids), method: :delete, remote: true, class: "like-btn" %>
  <% elsif user_signed_in? %>
    <%= button_to "いいね", article_likes_path(article.id), method: :post, remote: true, class: "like-btn" %>
  <% else %>
    <p class="like-letter">いいね</p>
  <% end %>
</div>