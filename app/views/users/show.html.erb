<%= render "/shared/header"%>

<div class="mypage">
  <div class="mypage-search">
    <%= search_form_for @q, url: search_articles_path, class: "search-form" do |f| %>
      <%= render partial: "/articles/search", locals: {f: f} %>
    <% end %>
  </div>
  <div class="mypage-post">
    <p class="mypage-name"><b><%= @user.nickname %></b>さんの投稿一覧</p>
    <% @articles.each do |article| %>
      <%= render partial: "/articles/article", locals: {article: article}%>
    <% end %>
  </div>
</div>

<%= render "/shared/footer"%>