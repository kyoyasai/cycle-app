<%= render "/shared/header"%>

<div class="container-fluid main-page">
  <div class="row">
    <div class="col-lg-3 offset-lg-0 col-sm-8 offset-sm-4 col-9 offset-3 search-list">
      <%= search_form_for @q, url: search_articles_path, class: "search-form" do |f| %>
        <%= render partial: "search", locals: {f: f} %>
      <% end %>
    </div>
    <div class="col-lg-9 offset-lg-0 col-md-10 offset-md-2 col-sm-11 offset-sm-1 offset-0 post-list">
      <% @articles.each do |article| %>
        <%= render partial: "article", locals: {article: article}%>
      <% end %>
      <%= paginate @articles %>
    </div>
  </div>
</div>

<%= render "/shared/footer"%>