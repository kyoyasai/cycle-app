<%= render "shared/second-header"%>

<div class='container-fluid form-wrap'>
  <div class="row">
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <div class="col-12 col-md-8 offset-md-2 col-xl-6 offset-xl-3">
      <div class='form-header'>
        <b>会員情報入力</b>
      </div>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="form-group-top">
        <div class='form-text-wrap'>
          <label class="form-text">ニックネーム</label>
          <span class="badge bg-warning">必須</span>
        </div>
        <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) cycle太郎", maxlength:"10" %>
        <p class='info-text'>※最大10文字まで</p>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="badge bg-warning">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class="badge bg-warning">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"8文字以上の半角英数字" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード(確認)</label>
          <span class="badge bg-warning">必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力" %>
      </div>
      <div class='register-btn'>
        <%= f.submit "会員登録" ,class:"register-red-btn" %>
      </div>
    </div>
    <% end %>

    <%= link_to "ログインはこちら", new_user_session_path, class:"user-transition" %>
  </div>
</div>

<%= render "shared/footer"%>
